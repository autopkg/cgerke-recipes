<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist
  PUBLIC '-//Apple//DTD PLIST 1.0//EN'
  'http://www.apple.com/DTDs/PropertyList-1.0.dtd'>
<plist version="1.0">
    <dict>
        <key>ParentRecipe</key>
        <string>com.github.autopkg.cgerke-recipes.download.AWSCLI</string>
        <key>Description</key>
        <string>Creates a pkg to deploy http://aws.amazon.com/cli/</string>
        <key>Identifier</key>
        <string>com.github.autopkg.cgerke-recipes.pkg.AWSCLI</string>
        <key>Input</key>
        <dict>
            <key>NAME</key>
            <string>AWSCLI</string>
        </dict>
        <key>MinimumVersion</key>
        <string>0.4.0</string>
        <key>Process</key>
        <array>
            <dict>
                <key>Processor</key>
                <string>PkgRootCreator</string>
                <key>Arguments</key>
                <dict>
                    <key>pkgroot</key>
                    <string>%RECIPE_CACHE_DIR%/pkgroot</string>
                    <key>pkgdirs</key>
                    <dict>
                        <key>tmp</key>
                        <string>0775</string>
                    </dict>
                </dict>
            </dict>
            <dict>
                <key>Comment</key>
                <string>Copy resources.</string>
                <key>Processor</key>
                <string>Copier</string>
                <key>Arguments</key>
                <dict>
                    <key>source_path</key>
                    <string>%RECIPE_CACHE_DIR%/source/awscli-bundle</string>
                    <key>destination_path</key>
                    <string>%pkgroot%/tmp/awscli-bundle</string>
                </dict>
            </dict>
            <dict>
                <key>Processor</key>
                <string>FileFinder</string>
                <key>Arguments</key>
                <dict>
                    <key>pattern</key>
                    <string>%RECIPE_CACHE_DIR%/source/awscli-bundle/packages/awscli-*.tar.gz</string>
                </dict>
            </dict>
            <dict>
                <key>Arguments</key>
                <dict>
                    <key>find</key>
                    <string>%RECIPE_CACHE_DIR%/source/awscli-bundle/packages/awscli-</string>
                    <key>input_string</key>
                    <string>%found_filename%</string>
                    <key>replace</key>
                    <string/>
                </dict>
                <key>Processor</key>
                <string>com.github.homebysix.FindAndReplace/FindAndReplace</string>
            </dict>
            <dict>
                <key>Arguments</key>
                <dict>
                    <key>find</key>
                    <string>.tar.gz</string>
                    <key>input_string</key>
                    <string>%output_string%</string>
                    <key>replace</key>
                    <string/>
                </dict>
                <key>Processor</key>
                <string>com.github.homebysix.FindAndReplace/FindAndReplace</string>
            </dict>
            <dict>
                <key>Comment</key>
                <string>Create a PackageInfo file using the template.</string>
                <key>Processor</key>
                <string>PkgInfoCreator</string>
                <key>Arguments</key>
                <dict>
                    <key>version</key>
                    <string>%output_string%</string>
                    <key>pkgroot</key>
                    <string>%pkgroot%</string>
                    <key>template_path</key>
                    <string>%RECIPE_DIR%/%NAME%/PackageInfoTemplate</string>
                    <key>infofile</key>
                    <string>%RECIPE_CACHE_DIR%/PackageInfo</string>
                    <key>pkgtype</key>
                    <string>flat</string>
                </dict>
            </dict>
            <dict>
                <key>Comment</key>
                <string>Build the package.</string>
                <key>Processor</key>
                <string>PkgCreator</string>
                <key>Arguments</key>
                <dict>
                    <key>pkg_request</key>
                    <dict>
                        <key>pkgname</key>
                        <string>%NAME%-%version%</string>
                        <key>chown</key>
                        <array>
                            <dict>
                                <key>path</key>
                                <string>tmp</string>
                                <key>user</key>
                                <string>root</string>
                                <key>group</key>
                                <string>wheel</string>
                            </dict>
                        </array>
                        <key>id</key>
                        <string>com.github.autopkg.cgerke-recipes.%NAME%</string>
                        <key>infofile</key>
                        <string>%RECIPE_CACHE_DIR%/PackageInfo</string>
                        <key>options</key>
                        <string>purge_ds_store</string>
                        <key>resources</key>
                        <string>%RECIPE_DIR%/%NAME%/Resources</string>
                        <key>scripts</key>
                        <string>%RECIPE_DIR%/%NAME%/Scripts</string>
                    </dict>
                </dict>
            </dict>
        </array>
    </dict>
</plist>
